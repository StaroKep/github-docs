.root {
    details {
        box-sizing: border-box;
        margin: 0 0 13px 0;
        padding: 0 0 0 17px;

        summary {
            cursor: pointer;
            user-select: none;
            outline: none;
            color: var(--main-color-text);
        }

        span {
            white-space: pre-wrap;
        }

        &[open] > summary {
            padding-bottom: 13px;
            color: var(--main-color-text);
        }
    }
}