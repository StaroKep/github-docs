.root {
    position: relative;
    max-width: calc(80% - 20px);
    box-sizing: border-box;
    height: calc(100vh - 20px);
    flex: 1 1 auto;
    margin: 10px;
    background-color: white;
    border-radius: 5px;
    box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.1);
    overflow: auto;
    line-height: 1.5;
    display: flex;
    flex-direction: row;
}
